{
  "openapi": "3.0.3",
  "info": {
    "title": "Users API",
    "version": "1.0.0",
    "description": "API untuk registrasi, login, profile user, dan manajemen user/admin dengan autentikasi dan otorisasi role."
  },
  "servers": [
    {
      "url": "http://localhost:3000/api/users",
      "description": "Local server"
    }
  ],
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    },
    "schemas": {
      "UserRegister": {
        "type": "object",
        "required": ["username", "email", "password", "phone_number"],
        "properties": {
          "username": { "type": "string", "example": "johndoe" },
          "email": {
            "type": "string",
            "format": "email",
            "example": "john@example.com"
          },
          "password": { "type": "string", "example": "password123" },
          "phone_number": { "type": "string", "example": "08123456789" }
        }
      },
      "UserLogin": {
        "type": "object",
        "required": ["email", "password"],
        "properties": {
          "email": {
            "type": "string",
            "format": "email",
            "example": "john@example.com"
          },
          "password": { "type": "string", "example": "password123" }
        }
      },
      "UserResponse": {
        "type": "object",
        "properties": {
          "id": { "type": "integer", "example": 1 },
          "username": { "type": "string", "example": "johndoe" },
          "email": {
            "type": "string",
            "format": "email",
            "example": "john@example.com"
          },
          "role": { "type": "string", "example": "user" },
          "phone_number": { "type": "string", "example": "08123456789" }
        }
      },
      "UserProfile": {
        "type": "object",
        "properties": {
          "id": { "type": "integer", "example": 1 },
          "username": { "type": "string", "example": "johndoe" },
          "email": {
            "type": "string",
            "format": "email",
            "example": "john@example.com"
          },
          "phone_number": { "type": "string", "example": "08123456789" }
        }
      },
      "ErrorResponse": {
        "type": "object",
        "properties": {
          "message": { "type": "string", "example": "Error message" },
          "errors": {
            "type": "array",
            "items": { "type": "string" }
          }
        }
      }
    }
  },
  "security": [
    {
      "bearerAuth": []
    }
  ],
  "paths": {
    "/register": {
      "post": {
        "summary": "Register pengguna baru",
        "tags": ["Auth"],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["username", "email", "password", "phone_number"],
                "properties": {
                  "username": {
                    "type": "string",
                    "minLength": 3,
                    "maxLength": 30,
                    "description": "Username user (3-30 karakter)"
                  },
                  "email": {
                    "type": "string",
                    "format": "email",
                    "description": "Email user dengan format valid"
                  },
                  "password": {
                    "type": "string",
                    "minLength": 6,
                    "description": "Password user (minimal 6 karakter)"
                  },
                  "phone_number": {
                    "type": "string",
                    "pattern": "^\\+?[0-9]+$",
                    "minLength": 10,
                    "maxLength": 15,
                    "description": "Nomor telepon hanya angka, boleh diawali '+' (10-15 digit)"
                  },
                  "role": {
                    "type": "string",
                    "enum": ["user", "admin", "super_admin"],
                    "description": "Role user (optional, diabaikan dan di-set 'user' otomatis saat register)"
                  }
                },
                "example": {
                  "username": "johndoe",
                  "email": "johndoe@example.com",
                  "password": "password123",
                  "phone_number": "+6281234567890",
                  "role": "admin"
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "User berhasil dibuat",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "id": { "type": "string", "description": "ID user" },
                    "username": { "type": "string" },
                    "email": { "type": "string", "format": "email" },
                    "role": { "type": "string" },
                    "phone_number": { "type": "string" }
                  }
                },
                "example": {
                  "id": "123abc",
                  "username": "johndoe",
                  "email": "johndoe@example.com",
                  "role": "user",
                  "phone_number": "+6281234567890"
                }
              }
            }
          },
          "400": {
            "description": "Validasi gagal atau username/email sudah digunakan",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": { "type": "string" },
                    "errors": {
                      "type": "array",
                      "items": { "type": "string" }
                    }
                  }
                },
                "examples": {
                  "validationError": {
                    "summary": "Error validasi input",
                    "value": {
                      "message": "Validasi gagal",
                      "errors": [
                        "username minimal 3 karakter",
                        "email harus dalam format yang valid"
                      ]
                    }
                  },
                  "duplicateError": {
                    "summary": "Username atau email sudah ada",
                    "value": {
                      "message": "Registrasi gagal",
                      "errors": [
                        "Username sudah digunakan",
                        "Email sudah digunakan"
                      ]
                    }
                  }
                }
              }
            }
          },
          "500": {
            "description": "Terjadi kesalahan server",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": { "type": "string" },
                    "error": { "type": "string" }
                  }
                },
                "example": {
                  "message": "Terjadi kesalahan server",
                  "error": "Error detail message"
                }
              }
            }
          }
        }
      }
    },
    "/login": {
      "post": {
        "summary": "Login user",
        "tags": ["Auth"],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/UserLogin" }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Login berhasil, mengembalikan token JWT",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": { "type": "string", "example": "success" },
                    "message": {
                      "type": "string",
                      "example": "Login berhasil"
                    },
                    "token": { "type": "string" },
                    "user": { "$ref": "#/components/schemas/UserResponse" }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Validasi login gagal",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/ErrorResponse" }
              }
            }
          },
          "401": {
            "description": "Email tidak ditemukan atau password salah",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": { "type": "string", "example": "fail" },
                    "message": {
                      "type": "string",
                      "example": "Email tidak ditemukan"
                    }
                  }
                }
              }
            }
          },
          "500": {
            "description": "Kesalahan server",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/ErrorResponse" }
              }
            }
          }
        }
      }
    },
    "/logout": {
      "post": {
        "summary": "Logout user (simbolis)",
        "tags": ["Auth"],
        "security": [{ "bearerAuth": [] }],
        "responses": {
          "200": {
            "description": "Logout berhasil",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "Logout berhasil (token masih aktif sampai expired)"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/me": {
      "get": {
        "summary": "Ambil profil user berdasarkan token JWT",
        "tags": ["Profile"],
        "security": [{ "bearerAuth": [] }],
        "responses": {
          "200": {
            "description": "Profil user ditemukan",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": { "type": "string", "example": "success" },
                    "message": {
                      "type": "string",
                      "example": "Data profil ditemukan"
                    },
                    "user": { "$ref": "#/components/schemas/UserProfile" }
                  }
                }
              }
            }
          },
          "404": {
            "description": "User tidak ditemukan",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/ErrorResponse" }
              }
            }
          },
          "500": {
            "description": "Gagal mengambil data profil",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/ErrorResponse" }
              }
            }
          }
        }
      }
    },
    "/profilUserAll": {
      "get": {
        "summary": "Ambil daftar user umum (dengan pagination)",
        "tags": ["User"],
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          {
            "name": "page",
            "in": "query",
            "description": "Nomor halaman (default 1)",
            "schema": { "type": "integer", "default": 1 }
          },
          {
            "name": "limit",
            "in": "query",
            "description": "Jumlah data per halaman (default 10)",
            "schema": { "type": "integer", "default": 10 }
          }
        ],
        "responses": {
          "200": {
            "description": "Daftar user berhasil diambil",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": { "type": "string", "example": "success" },
                    "message": {
                      "type": "string",
                      "example": "Data user berhasil diambil"
                    },
                    "page": { "type": "integer", "example": 1 },
                    "limit": { "type": "integer", "example": 10 },
                    "users": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "username": {
                            "type": "string",
                            "example": "johndoe"
                          },
                          "phone_number": {
                            "type": "string",
                            "example": "08123456789"
                          }
                        }
                      }
                    }
                  }
                }
              }
            }
          },
          "500": {
            "description": "Gagal mengambil data user",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/ErrorResponse" }
              }
            }
          }
        }
      }
    },
    "/profilUserById/{id}": {
      "get": {
        "summary": "Ambil data user berdasarkan ID",
        "tags": ["User"],
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "ID user",
            "required": true,
            "schema": { "type": "integer", "example": 1 }
          }
        ],
        "responses": {
          "200": {
            "description": "Data user ditemukan",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": { "type": "string", "example": "success" },
                    "user": {
                      "type": "object",
                      "properties": {
                        "id": { "type": "integer", "example": 1 },
                        "username": { "type": "string", "example": "johndoe" },
                        "email": {
                          "type": "string",
                          "format": "email",
                          "example": "john@example.com"
                        }
                      }
                    }
                  }
                }
              }
            }
          },
          "404": {
            "description": "User tidak ditemukan",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/ErrorResponse" }
              }
            }
          },
          "500": {
            "description": "Kesalahan server",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/ErrorResponse" }
              }
            }
          }
        }
      }
    },
    "/admin": {
      "get": {
        "summary": "Ambil daftar admin (hanya super_admin)",
        "tags": ["Admin"],
        "security": [{ "bearerAuth": [] }],
        "responses": {
          "200": {
            "description": "Daftar admin berhasil diambil",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": { "type": "string", "example": "success" },
                    "admins": {
                      "type": "array",
                      "items": { "$ref": "#/components/schemas/UserResponse" }
                    }
                  }
                }
              }
            }
          },
          "403": {
            "description": "Akses ditolak",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/ErrorResponse" }
              }
            }
          }
        }
      },
      "post": {
        "summary": "Buat admin/user baru dengan role (hanya super_admin)",
        "tags": ["Admin"],
        "security": [{ "bearerAuth": [] }],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": [
                  "username",
                  "email",
                  "password",
                  "phone_number",
                  "role"
                ],
                "properties": {
                  "username": { "type": "string", "example": "adminuser" },
                  "email": {
                    "type": "string",
                    "format": "email",
                    "example": "admin@example.com"
                  },
                  "password": { "type": "string", "example": "password123" },
                  "phone_number": {
                    "type": "string",
                    "example": "08123456789"
                  },
                  "role": { "type": "string", "example": "admin" }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "User berhasil dibuat",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/UserResponse" }
              }
            }
          },
          "403": {
            "description": "Akses ditolak",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/ErrorResponse" }
              }
            }
          }
        }
      }
    },
    "/admin/{id}": {
      "put": {
        "summary": "Update user berdasarkan ID (hanya super_admin)",
        "tags": ["Admin"],
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": { "type": "integer", "example": 1 }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "username": { "type": "string", "example": "newusername" },
                  "email": {
                    "type": "string",
                    "format": "email",
                    "example": "newemail@example.com"
                  },
                  "phone_number": {
                    "type": "string",
                    "example": "08123456789"
                  },
                  "role": { "type": "string", "example": "admin" }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "User berhasil diupdate",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/UserResponse" }
              }
            }
          },
          "403": {
            "description": "Akses ditolak",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/ErrorResponse" }
              }
            }
          },
          "404": {
            "description": "User tidak ditemukan",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/ErrorResponse" }
              }
            }
          }
        }
      }
    },
    "/{id}": {
      "patch": {
        "summary": "Update sebagian data user (owner atau admin atau super_admin)",
        "tags": ["User"],
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "ID user yang ingin diupdate",
            "required": true,
            "schema": { "type": "integer", "example": 1 }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "username": { "type": "string", "example": "partialupdate" },
                  "email": {
                    "type": "string",
                    "format": "email",
                    "example": "partial@example.com"
                  },
                  "phone_number": { "type": "string", "example": "08123456789" }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Data user berhasil diupdate",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/UserResponse" }
              }
            }
          },
          "403": {
            "description": "Akses ditolak",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/ErrorResponse" }
              }
            }
          },
          "404": {
            "description": "User tidak ditemukan",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/ErrorResponse" }
              }
            }
          }
        }
      },
      "delete": {
        "summary": "Hapus user (owner atau admin atau super_admin)",
        "tags": ["User"],
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "ID user yang ingin dihapus",
            "required": true,
            "schema": { "type": "integer", "example": 1 }
          }
        ],
        "responses": {
          "200": {
            "description": "User berhasil dihapus",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "User berhasil dihapus"
                    }
                  }
                }
              }
            }
          },
          "403": {
            "description": "Akses ditolak",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/ErrorResponse" }
              }
            }
          },
          "404": {
            "description": "User tidak ditemukan",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/ErrorResponse" }
              }
            }
          }
        }
      }
    }
  }
}
