        "security": [
          {
            "bearerAuth": []
          }
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "description": "ID user yang ingin diperbarui",
            "schema": {
              "type": "integer",
              "example": 1
            }
          }
        ],
        "requestBody": {
