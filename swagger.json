{
  "openapi": "3.0.3",
  "info": {
    "title": "Users API",
    "version": "1.0.0",
    "description": "API untuk registrasi, login, profile user, dan manajemen user/admin dengan autentikasi dan otorisasi role."
  },
  "servers": [
    {
      "url": "http://localhost:3000/api/users",
      "description": "Local server"
    }
  ],
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    },
    "schemas": {
      "UserRegister": {
        "type": "object",
        "required": ["username", "email", "password", "phone_number"],
        "properties": {
          "username": { "type": "string", "example": "johndoe" },
          "email": {
            "type": "string",
            "format": "email",
            "example": "johndoe@example.com"
          },
          "password": { "type": "string", "example": "password123" },
          "phone_number": { "type": "string", "example": "08123456789" }
        }
      },
      "UserLogin": {
        "type": "object",
        "required": ["email", "password"],
        "properties": {
          "email": {
            "type": "string",
            "format": "email",
            "example": "johndoe@example.com"
          },
          "password": { "type": "string", "example": "password123" }
        }
      },
      "UserResponse": {
        "type": "object",
        "properties": {
          "id": { "type": "integer", "example": 1 },
          "username": { "type": "string", "example": "johndoe" },
          "email": {
            "type": "string",
            "format": "email",
            "example": "john@example.com"
          },
          "role": { "type": "string", "example": "user" },
          "phone_number": { "type": "string", "example": "08123456789" }
        }
      },
      "UserProfile": {
        "type": "object",
        "properties": {
          "id": { "type": "integer", "example": 1 },
          "username": { "type": "string", "example": "johndoe" },
          "email": {
            "type": "string",
            "format": "email",
            "example": "john@example.com"
          },
          "phone_number": { "type": "string", "example": "08123456789" }
        }
      },
      "ErrorResponse": {
        "type": "object",
        "properties": {
          "message": { "type": "string", "example": "Error message" },
          "errors": {
            "type": "array",
            "items": { "type": "string" }
          }
        }
      }
    }
  },
  "security": [
    {
      "bearerAuth": []
    }
  ],
  "paths": {
    "/register": {
      "post": {
        "summary": "Register pengguna baru",
        "tags": ["Auth"],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["username", "email", "password", "phone_number"],
                "properties": {
                  "username": {
                    "type": "string",
                    "minLength": 3,
                    "maxLength": 30,
                    "description": "Username user (3-30 karakter)"
                  },
                  "email": {
                    "type": "string",
                    "format": "email",
                    "description": "Email user dengan format valid"
                  },
                  "password": {
                    "type": "string",
                    "minLength": 6,
                    "description": "Password user (minimal 6 karakter)"
                  },
                  "phone_number": {
                    "type": "string",
                    "pattern": "^\\+?[0-9]+$",
                    "minLength": 10,
                    "maxLength": 15,
                    "description": "Nomor telepon hanya angka, boleh diawali '+' (10-15 digit)"
                  },
                  "role": {
                    "type": "string",
                    "enum": ["user", "admin", "super_admin"],
                    "description": "Role user (optional, diabaikan dan di-set 'user' otomatis saat register)"
                  }
                },
                "example": {
                  "username": "johndoe",
                  "email": "johndoe@example.com",
                  "password": "password123",
                  "phone_number": "+6281234567890",
                  "role": "admin"
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "User berhasil dibuat",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "id": { "type": "string", "description": "ID user" },
                    "username": { "type": "string" },
                    "email": { "type": "string", "format": "email" },
                    "role": { "type": "string" },
                    "phone_number": { "type": "string" }
                  }
                },
                "example": {
                  "id": "123abc",
                  "username": "johndoe",
                  "email": "johndoe@example.com",
                  "role": "user",
                  "phone_number": "+6281234567890"
                }
              }
            }
          },
          "400": {
            "description": "Validasi gagal atau username/email sudah digunakan",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": { "type": "string" },
                    "errors": {
                      "type": "array",
                      "items": { "type": "string" }
                    }
                  }
                },
                "examples": {
                  "validationError": {
                    "summary": "Error validasi input",
                    "value": {
                      "message": "Validasi gagal",
                      "errors": [
                        "username minimal 3 karakter",
                        "email harus dalam format yang valid"
                      ]
                    }
                  },
                  "duplicateError": {
                    "summary": "Username atau email sudah ada",
                    "value": {
                      "message": "Registrasi gagal",
                      "errors": [
                        "Username sudah digunakan",
                        "Email sudah digunakan"
                      ]
                    }
                  }
                }
              }
            }
          },
          "500": {
            "description": "Terjadi kesalahan server",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": { "type": "string" },
                    "error": { "type": "string" }
                  }
                },
                "example": {
                  "message": "Terjadi kesalahan server",
                  "error": "Error detail message"
                }
              }
            }
          }
        }
      }
    },
    "/users/login": {
      "post": {
        "summary": "Login User",
        "tags": ["Auth"],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["email", "password"],
                "properties": {
                  "email": {
                    "type": "string",
                    "format": "email",
                    "example": "user@example.com"
                  },
                  "password": {
                    "type": "string",
                    "example": "123456"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Login berhasil",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": { "type": "string", "example": "success" },
                    "message": {
                      "type": "string",
                      "example": "Login berhasil"
                    },
                    "token": { "type": "string", "example": "JWT_TOKEN" },
                    "user": {
                      "type": "object",
                      "properties": {
                        "id": { "type": "integer", "example": 1 },
                        "username": { "type": "string", "example": "john_doe" },
                        "email": {
                          "type": "string",
                          "example": "user@example.com"
                        },
                        "role": { "type": "string", "example": "user" },
                        "phone_number": {
                          "type": "string",
                          "example": "081234567890"
                        },
                        "expiresIn": { "type": "string", "example": "1h" }
                      }
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Validasi login gagal",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": { "type": "string", "example": "fail" },
                    "message": {
                      "type": "string",
                      "example": "Validasi login gagal"
                    },
                    "errors": {
                      "type": "array",
                      "items": {
                        "type": "string",
                        "example": "email wajib diisi"
                      }
                    }
                  }
                }
              }
            }
          },
          "401": {
            "description": "Email tidak ditemukan atau password salah",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "oneOf": [
                    {
                      "properties": {
                        "status": { "type": "string", "example": "fail" },
                        "message": {
                          "type": "string",
                          "example": "Email tidak ditemukan"
                        }
                      }
                    },
                    {
                      "properties": {
                        "status": { "type": "string", "example": "fail" },
                        "message": {
                          "type": "string",
                          "example": "Password salah"
                        }
                      }
                    }
                  ]
                }
              }
            }
          },
          "500": {
            "description": "Server error",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": { "type": "string", "example": "error" },
                    "message": {
                      "type": "string",
                      "example": "Terjadi kesalahan pada server"
                    },
                    "error": {
                      "type": "string",
                      "example": "Error message from server"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/logout": {
      "post": {
        "summary": "Logout user (simbolis)",
        "tags": ["Auth"],
        "security": [{ "bearerAuth": [] }],
        "responses": {
          "200": {
            "description": "Logout berhasil",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "Logout berhasil (token masih aktif sampai expired)"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
